<Window x:Class="Week_9_Enumerables_and_images.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Week_9_Enumerables_and_images"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Canvas Background="#FFD8C8C8">
        <RichTextBox Canvas.Left="8" Canvas.Top="10" Width="226">
            <FlowDocument>
                <Paragraph>
                    <Run x:Name="runDisplay"
                        Text="RichTextBox"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <ComboBox x:Name="cmbStyles" Canvas.Left="591" Canvas.Top="23" Width="153"/>

        <Image x:Name="imgDisplay"
            Height="239" Canvas.Left="171" Canvas.Top="93" Width="444" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Button x:Name="btnLoadImage" Content="LoadImage" Canvas.Left="316" Canvas.Top="19" Height="62" Width="115" Click="btnLoadImage_Click"/>

    </Canvas>
</Window>
